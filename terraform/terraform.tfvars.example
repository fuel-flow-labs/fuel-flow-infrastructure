# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your environment
# IMPORTANT: terraform.tfvars is excluded from git to protect sensitive data

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Terraform State Backend
# Note: These should match the bucket and table created by the terraform_state module
state_bucket_name      = "fuel-flow-terraform-state"
state_lock_table_name  = "fuel-flow-terraform-locks"

# S3 Configuration
s3_bucket_prefix = "fuel-flow"

# EC2 Configuration
ec2_instance_type = "t3.micro"
ec2_key_name      = ""  # Optional: Specify your EC2 key pair name for SSH access

# RDS Configuration
rds_db_name           = "fuelflowdb"
rds_username          = "admin"
rds_instance_class    = "db.t3.micro"
rds_allocated_storage = 20

# For production environments, consider:
# ec2_instance_type     = "t3.small"
# rds_instance_class    = "db.t3.small"
# rds_allocated_storage = 100
